<Page
    x:Class="CrewOnCallUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrewOnCallUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="addCalButton" Content="Add Calendar" Click="addCalButton_Click" HorizontalAlignment="Left" Margin="0,156,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="confirmButton" Content="SMS Confirm" Click="confirmButton_Click" HorizontalAlignment="Right" Margin="0,156,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="onTheWayButton" Content="SMS On the Way" Click="ontheway_Click" HorizontalAlignment="Left" Margin="0,217,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="sendtotalHoursButton" Content="SMS Hours" Click="sendtotalHours_Click" HorizontalAlignment="Right"  Margin="0,217,-1,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="clientNameTextBox" Header="Client" TextChanged="clientName_TextChanged" IsReadOnly="False" Margin="0,281,-1,0" TextWrapping="Wrap" Text="{Binding ClientName}" VerticalAlignment="Top"/>
        <TextBox x:Name="venueNameTextBox" Header="Venue" TextChanged="venueName_TextChanged" IsReadOnly="False" Margin="-1,352,0,0" TextWrapping="Wrap" Text="{Binding VenueName}" VerticalAlignment="Top"/>
        <TextBox x:Name="clientNotesTextBox" Header="Notes" TextChanged="clientNotes_TextChanged" IsReadOnly="False" Margin="0,423,-1,0" TextWrapping="Wrap" Text="Notes" VerticalAlignment="Top"/>
        <DatePicker x:Name="startDatePicker" Margin="0,0,291,584" DateChanged="startDatePicker_DateChanged" Header="Start Date" />
        <TimePicker x:Name="startTimePicker" Margin="0,76,0,659" HorizontalAlignment="Left" TimeChanged="startTimePicker_TimeChanged" Header="Start Time" Time="{Binding StartTime, Mode=TwoWay}" MinuteIncrement="15"/>
        <ComboBox x:Name="breakLengthPicker" HorizontalAlignment="Center" Margin="136,76,144,625"  Width="120" SelectionChanged="breakLength_SelectionChanged" Header="Meal Break">
            <ComboBoxItem Content="No" IsSelected="True"/>
            <ComboBoxItem Content="30 min"/>
            <ComboBoxItem Content="45 min" />
            <ComboBoxItem Content="60 min"/>
        </ComboBox>
        <TimePicker x:Name="endTimePicker" Margin="0,76,0,642" HorizontalAlignment="Right" TimeChanged="endTimePicker_TimeChanged" Header="Finish Time" MinuteIncrement="15" Width="119"/>
        <ComboBox x:Name="skillPicker" HorizontalAlignment="Right" Margin="270,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="skillPicker_SelectionChanged" Header="Skill">
            <ComboBoxItem Content="LEVEL3" IsSelected="True"/>
            <ComboBoxItem Content="VANDVR"/>
            <ComboBoxItem Content="MR/HR" />
        </ComboBox>

    </Grid>
</Page>
